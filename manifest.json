{
    "name": "Dark SBHS Student Portal",
    "description": "Allows users of the SBHS Student Portal to switch to a dark theme.",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["https://student.sbhs.net.au/*"],
            "js": ["scripts/script.js"],
            "css": ["dark.css"],
            "run_at": "document_end"
        },
        {
            "matches": ["https://student.sbhs.net.au/award-scheme"],
            "css": ["award.css"]
        },
        {
            "matches": ["https://student.sbhs.net.au/device"],
            "js": ["scripts/fussyQR.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["https://student.sbhs.net.au/self-service"],
            "js": ["scripts/fussyDownArrows.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["assets/*"],
            "matches": ["https://student.sbhs.net.au/*"]
        }
    ]
}
